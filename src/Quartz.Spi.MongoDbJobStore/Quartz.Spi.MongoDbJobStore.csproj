<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
    <AssemblyName>Quartz.Spi.MongoDbJobStore</AssemblyName>
    <IsPackable>true</IsPackable>
    <PackageProjectUrl>https://github.com/Cricle/mongodb-quartz-net</PackageProjectUrl>
    <PackageReleaseNotes>Release notes: https://github.com/Cricle/mongodb-quartz-net/releases/$(Version)

Fork from https://github.com/glucaci/mongodb-quartz-net.git
Change Comon.Log to MS Log</PackageReleaseNotes>
    <Product>Quartz.Spi.MongoDbJobStore.MSLog</Product>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>MSLog.$(AssemblyName)</PackageId>
    <RepositoryUrl>https://github.com/Cricle/mongodb-quartz-net</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.1" />
    <PackageReference Include="MongoDB.Driver" Version="2.17.1" />
    <PackageReference Include="Quartz" Version="3.4.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.SourceLink.GitHub" Version="1.1.1" />
  </ItemGroup>

</Project>
